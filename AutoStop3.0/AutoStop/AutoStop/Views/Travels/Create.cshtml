@model AutoStop.Models.Travels

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Travels</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TimeSend" class="control-label"></label>
                <input asp-for="TimeSend" class="form-control" />
                <span asp-validation-for="TimeSend" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeArrive" class="control-label"></label>
                <input asp-for="TimeArrive" class="form-control" />
                <span asp-validation-for="TimeArrive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AvailableSeats" class="control-label"></label>
                <input asp-for="AvailableSeats" class="form-control" />
                <span asp-validation-for="AvailableSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CarId" class="control-label"></label>
                <select asp-for="CarId" class ="form-control" asp-items="ViewBag.CarId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PointSendId" class="control-label"></label>
                <select asp-for="PointSendId" class ="form-control" asp-items="ViewBag.PointSendId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PointArriveId" class="control-label"></label>
                <select asp-for="PointArriveId" class ="form-control" asp-items="ViewBag.PointArriveId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CreaterId" class="control-label"></label>
                <input asp-for="CreaterId" class ="form-control" value="@ViewBag.CreaterId"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

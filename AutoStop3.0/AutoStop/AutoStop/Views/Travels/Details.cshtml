@model AutoStop.ViewModels.DetailsTravelViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Подробности</h1>

<div>
    <h4>Поездки</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.travels.TimeCreate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.travels.TimeCreate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.travels.TimeSend)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.travels.TimeSend)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.travels.TimeArrive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.travels.TimeArrive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.travels.AvailableSeats)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.travels.AvailableSeats)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.travels.Cost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.travels.Cost)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.travels.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.travels.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.travels.Car)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.travels.Car.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.travels.PointSend)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.travels.PointSend.PointName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.travels.PointArrive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.travels.PointArrive.PointName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.travels.Creater)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.travels.Creater.Email)
        </dd>
    </dl>
</div>
<h4>Коментарии</h4>
<a role = "button" class = "btn btn-primary" onclick="showInPopup('@Url.Action("CreateComment","Comment",new {TravelsId=Model.travels.Number},Context.Request.Scheme)','Добавить коментарий')">Добавить коментарий</a>
@foreach(var c in Model.comments)
{
    <p>Создатель: @c.AccountsId</p>
    <p>Коментраий: @c.Comment</p>
}
<div>
    <a asp-action="Edit" asp-route-id="@Model?.travels.Number">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

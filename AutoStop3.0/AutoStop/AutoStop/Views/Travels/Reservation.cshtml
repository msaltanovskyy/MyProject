@model AutoStop.Models.BusyPlaces

@{
    ViewData["Title"] = "Reservation";
}

<h1>Забронированировать место</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Reservation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TravelId" class="control-label"></label>
                <input asp-for="TravelId" class ="form-control" value="@ViewBag.TravelId"/>
            </div>
            <div class="form-group">
                <label asp-for="BusyPlace" class="control-label"></label>
                <input asp-for="BusyPlace" class="form-control" />
                <span asp-validation-for="BusyPlace" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountId" class="control-label"></label>
                <input asp-for="AccountId" class ="form-control" value="@ViewBag.AccountId"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
